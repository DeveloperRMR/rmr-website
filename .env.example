# Example environment variables for RMR TRANSPORTATION LLC
# Copy this file to `.env` and fill in real credentials before running the backend.

# Server
PORT=4000
NODE_ENV=development

# Database
# Path to SQLite DB file (relative to backend folder or absolute)
DB_PATH=./backend/data/registrations.db

# RingCentral (replace with your credentials)
RINGCENTRAL_CLIENT_ID=your_ringcentral_client_id
RINGCENTRAL_CLIENT_SECRET=your_ringcentral_client_secret
RINGCENTRAL_SERVER=https://platform.ringcentral.com
RINGCENTRAL_USERNAME=your_ringcentral_username
RINGCENTRAL_PASSWORD=your_ringcentral_password
RINGCENTRAL_EXTENSION=
FROM_PHONE_NUMBER=+15734151555

# Company / metadata
COMPANY_NAME="RMR TRANSPORTATION LLC"
COMPANY_EMAIL="info@rmrtransportationllc.com"
COMPANY_ADDRESS="5203 Oakleaf Dr, Kansas City, Missouri 64129 Apt 3"

# Admin secret for protected endpoints (set a strong random value in production)
ADMIN_SECRET=change_this_to_a_strong_secret
